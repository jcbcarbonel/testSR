#define LED_OFF 0
#define LED_GREEN 1
#define LED_RED 2

void ledConfig(int mode)
{
   switch (mode) {
      case LED_GREEN:
         output_high(LED_STAT_A);
         output_low(LED_STAT_B);
         break;
      case LED_RED:
         output_low(LED_STAT_A);
         output_high(LED_STAT_B);
         break;
      default:
         output_low(LED_STAT_A);
         output_low(LED_STAT_B);
         break;
   }
}

void ledToggle()
{
   static int1 toggle=0;
   if (toggle==0)
      ledConfig(LED_GREEN);
   else
      ledConfig(LED_OFF);
}
