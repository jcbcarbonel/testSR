void flashRoutineSpi(int1 buffer)
{
   if (buffer == 0)
      spi_write(0xD4);
    else
      spi_write(0xD6);
    
    //--- 8 Dont'care Byte
    spi_write(0x00);
    //--- High Byte address
    spi_write(0x00);
    //--- Low Byte address
    spi_write(0x00);
    //--- 8 Dont'care Byte
    spi_write(0x00);
}

int1 extractLastChar_(int16 PageNum,int1 buffer,int16 & btCnt)
{
   char  TxBuffer;
   int16 ByteCnt=0;
   int1 foundBl=0;
   
   output_high(SCP_CSB);
   DTFPageToRam(PageNum, buffer);
   while (!DTFIsReady());
   //--- Initialisation
   DTFSelect();
 
   flashRoutineSpi(buffer);
    
    do {
        TxBuffer = spi_read(0);
        if (TxBuffer == '~')
        {
            foundBl=1; 
            break;
        }          
    } while (ByteCnt++<(DTFPageSize-1));
    //--- Unselect
    DTFUnSelect();
    btCnt = ByteCnt;
    
    return foundBl;
    
}

