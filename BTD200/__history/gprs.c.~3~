void sampCopy()
{
   int16 x=0;
   strcpy(MSG_DATA,"thequickbrownfoxjumpsoverthelazy");
   for (x=0;x<=400;x++)
   {  
      //DTFWriteToFlash(MSG_DATA,strlen(MSG_DATA),0);
      //delay_ms(100);
      //fprintf(PC,"data: %s\n",MSG_DATA);
      DTFRAMToPage(0,1);
      fprintf(PC,"x: %li\n",x);
   }
}

