void gprsRoutine()
{
   char strz[10] = {};
   
   openConGprs();
   strcpy(REALDATA,"ready");
   sendGPRS(strlen(REALDATA),REALDATA);
   while(1)
   {
      if (EXT_FLAG==1)
      {
         restart_wdt();
         //proc_receive();
         rcvMsgGPRS(1024);
         EXT_FLAG=0;
      }
      if (exitLoopx == 1)
      {
         exitLoopx = 0;
         break;
      }
   }
