int16 crc_generator(int8 *data, int16 len)
{
   int16 i;
   int16 crc = 0xFFFF;
   char convto_string[10];
   
   while(len--)
   {
      i = make8(crc,1) ^ *data++;
      i ^= i>>4;
     
      crc = (crc << 8) ^ (i << 12) ^ (i <<5) ^ i;
   }
   fprintf(PC,"CRC: %LX\n",crc);
//!   sprintf(convto_string, "<%lu>", crc);
   itoa(crc,16,convto_string);
//!   fprintf(PC,"string: %s\n",convto_string);
   return crc;
}
