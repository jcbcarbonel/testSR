#Byte TMR1H = 0xFCF   // TIMER1 HIGH BYTE LOOK DATASHEET
#Byte T1CON = 0xFCD  //TIMER1 CONFIG REGISTER LOOK DATASHEET 



//#define IS_LEAP(year) (year%4 == 0)
unsigned int INTERRUPTCHECKER=0;

int1 IS_LEAP(year)
{
   int16 year_ = 0;
   
   year_ = year + 2000;
   if (((year_ % 4 == 0) && (year % 100 != 0)) || (year % 400 ==0))
      return 1;
   else
      return 0;
}


#int_TIMER1 
void TIMER1_isr()    
{ 
   bit_clear(T1CON,1);
   bit_set(TMR1H,7);
   bit_set(T1CON,1);
   
   INTERRUPTCHECKER=0; 
   if (++SEC>59){
      SEC=0;
      TESTFLAG=TRUE;
      if(++MIN>59){
         MIN=0;
         if(++HOUR>23){
            HOUR=0;
            ++DAY;
            if ((DAY == 29 && MONTH== 2 && !IS_LEAP(YEAR))
               || (DAY == 30 && MONTH==2)
               || (DAY == 31 && (MONTH==4 || MONTH==6 || MONTH==9 || MONTH==11))
               || (DAY == 32)
               ){MONTH++;DAYS=1;}
            if(MONTH == 13) {YEAR++; MONTH=1;}
            RESETCPU=1;
         }
         if (HOUR == 8)
            RESETFLAG=TRUE;
      }
   }
   
   
   if ((MIN%SENDING_TIME) == 0)
   {
      if (CHECKMINUTE == FALSE)
      {
         CHECKMINUTE = TRUE;
         SAMPLINGFLAG = TRUE;
      }
   }
   else
      CHECKMINUTE = FALSE;
     
}

