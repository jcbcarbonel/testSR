{ char *ptr;
  char temp[20];
  
  ptr = readRtc();
//!  fprintf(USB,"RTC date and time: %s\n",ptr);
  
  strcpy(temp,ptr);
  updateMcuDateTime(temp);

   
  ptr=getMcuDateTime();

  fprintf(USB,"MCU date and time: %s\n",ptr);
  
